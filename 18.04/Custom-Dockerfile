FROM       ubuntu:18.04
MAINTAINER Jinwoo Han "https://github.com/xiote"

# install components
RUN apt-get update && apt-get install -y openssh-server curl vim git net-tools

# python
RUN apt-get update && apt-get install -y python-pip python-dev build-essential

# dropbox
RUN apt-get update && apt-get install -y libatomic1

# zsh
RUN apt-get update && apt-get install -y zsh
RUN sh -c "$(wget https://raw.githubusercontent.com/robbyrussell/oh-my-zsh/master/tools/install.sh -O -)"
RUN chsh -s $(which zsh)

# alias
RUN echo "curl -L http://gitlab.krei.co.kr:90/nextep/common/raw/master/alias.sh -o ~/alias.sh;" >> ~/.zshrc
RUN echo "source ~/alias.sh;" >> ~/.zshrc
RUN echo "alias src='. ~/.zshrc'" >> ~/.zshrc

#vimgolf
RUN apt-get update && apt-get install -y ruby-full
RUN gem install vimgolf

# go
RUN wget https://dl.google.com/go/go1.13.4.linux-amd64.tar.gz
RUN tar -C /usr/local -xzf go1.13.4.linux-amd64.tar.gz

# git setting
RUN git config --global credential.helper cache

# sshd setting
RUN mkdir /var/run/sshd

RUN echo 'root:root' |chpasswd

RUN sed -ri 's/^#?PermitRootLogin\s+.*/PermitRootLogin yes/' /etc/ssh/sshd_config
RUN sed -ri 's/UsePAM yes/#UsePAM yes/g' /etc/ssh/sshd_config

RUN mkdir /root/.ssh

RUN apt-get clean && \
    rm -rf /var/lib/apt/lists/* /tmp/* /var/tmp/*

EXPOSE 22

CMD    ["/usr/sbin/sshd", "-D"]
