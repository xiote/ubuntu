FROM       ubuntu:16.04
MAINTAINER Jinwoo Han "https://github.com/xiote"

RUN apt-get update && apt-get install -y openssh-server curl vim git /*ruby-full*/ software-properties-common

RUN apt-add-repository ppa:brightbox/ruby-ng
RUN apt-get update && apt-get install -y ruby2.4 ruby2.4-dev build-essential zlib1g-dev

RUN gem install jekyll bundler

# git config
RUN git config --global credential.helper cache

RUN mkdir /var/run/sshd

RUN echo 'root:root' |chpasswd

RUN sed -ri 's/^#?PermitRootLogin\s+.*/PermitRootLogin yes/' /etc/ssh/sshd_config
RUN sed -ri 's/UsePAM yes/#UsePAM yes/g' /etc/ssh/sshd_config

RUN mkdir /root/.ssh

RUN apt-get clean && \
    rm -rf /var/lib/apt/lists/* /tmp/* /var/tmp/*

EXPOSE 22

CMD    ["/usr/sbin/sshd", "-D"]
